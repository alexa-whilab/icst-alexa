                "height": "100vh", 
                "width": "100vw",
                "justifyContent": "center", 
                "alignItems": "center",    
                "items": [
                    {
                         "type": "Image",
                         "source": "https://alexa-whilab.s3.us-east-2.amazonaws.com/iCST/gui/background.jpg",
                         "description": "background", 
                         "scale": "best-fill",
                         "width": "100vw",
                         "height": "100vh"
                         
                    },
                    {
                        "type": "Container",
                        "width": "80vw",
                        "height": "50vh",
                        "id": "title_text_container",
                        "opacity": 1,
                        "position": "absolute",
                        "justifyContent": "center",
                        "alignItems": "center",
                        "items": [
                        {
                            "type": "Text",
                            "id": "title_text",
                            "text": "${LambdaData.titleText}",
