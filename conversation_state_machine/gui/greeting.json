{
    "type": "APL",
    "version": "1.3",
    "settings": {},
    "theme": "dark",
    "import": [
        {
            "name": "alexa-layouts",
            "version": "1.7.0"
        }
    ],
    "resources": [
        {
            "colors": {
                "Background": "#F79AC0",
                "myBlue": "#66DFFF"
            }
        }
    ],
    "styles": {},
