        {
            "type": "AnimateItem",
            "easing": "ease-in-out",
            "componentId": "APL_Page",
            "duration": 700,
            "value": [
                {
                    "property": "opacity",
                    "to": 1
                }
            ]
        }
    ],
    "graphics": {},
    "commands": {
    },
    "layouts": {},
    "mainTemplate": {
        "items": [
            {
                "type": "Container",
                "id": "APL_Page",
                "description": "the highest level of the container.", 
