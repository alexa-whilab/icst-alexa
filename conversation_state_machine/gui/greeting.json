                    },
                    {
                        "type": "Container",
                        "position": "absolute",
                        "width": "80vw",
                        "height": "30vh",
                        "id": "response_text_container",
                        "opacity": 0,
                        "items": [
                            {
                                "type": "Text",
                                "id": "response_text",
                                "style": "karaokeStyle",
                                "text": "",
                                "speech": "",
                                "paddingTop": 40,
                                "fontSize": "40dp",
                                "fontWeight": "300"
                            }
                        ]
                    }
                ]
            }
        ],
        "parameters": [
            "LambdaData"
        ]
    }
}